<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Sample.TwoPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:cpnts="clr-namespace:Sample.Components"
    Shell.FlyoutBehavior="Flyout"
    Shell.NavBarIsVisible="False">

    <Grid
        BackgroundColor="Transparent"
        HorizontalOptions="FillAndExpand"
        RowDefinitions="Auto, *"
        VerticalOptions="FillAndExpand">

        <cpnts:NavigationBar
            NavBarSeparatorType="LineWithShadow"
            NavBarTextColor="#444444"
            NavBarTitle="Página 2" />


        <VerticalStackLayout Grid.Row="1" VerticalOptions="FillAndExpand">
            <Button
                Margin="0,50,0,0"
                Clicked="Button_Clicked"
                Text="Navegar para página 3"
                VerticalOptions="CenterAndExpand" />
        </VerticalStackLayout>

    </Grid>

</ContentPage>
